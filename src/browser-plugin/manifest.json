{
  "manifest_version": 3,
  "name": "CV Job Extractor",
  "version": "1.1.3",
  "description": "Extract job opportunities for CV optimization",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*",
    "http://localhost:*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://*.linkedin.com/jobs/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "CV Job Extractor"
  }
  
}